<Configuration>
    <Properties>
        <Property name="filename">./src/main/java/project/progtechwitcher/Logging/LogFiles</Property>
    </Properties>
    <Appenders>
        <RollingFile name="file" fileName="${filename}/log-%d{yyyy-MM-dd}.log"
                     filePattern="${filename}/log-%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <pattern>%d [%-5p] - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d [%-5p] - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.apache.log4j.xml" level="all"/>
        <Root level="all">
            <AppenderRef ref="file"/>
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>